<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="310.0" prefWidth="499.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BookingDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Section Selection -->
    <HBox alignment="CENTER" prefHeight="61.0" prefWidth="478.0" spacing="10">
        <Label />
        <ComboBox fx:id="sectionComboBox" prefHeight="42.0" prefWidth="398.0" promptText="Select Section" />
    </HBox>

    <!-- Subject Selection -->
    <HBox alignment="CENTER" prefHeight="54.0" prefWidth="478.0" spacing="10">
        <Label />
        <ComboBox fx:id="subjectComboBox" prefHeight="42.0" prefWidth="398.0" promptText="Select Subject" />
    </HBox>

       <!-- Start Time Picker -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Start Time:" />
        <TextField fx:id="startTimePicker" promptText="HH:mm" />
        <Label text="End Time:" />
        <TextField fx:id="endTimePicker" promptText="HH:mm" />
    </HBox>

    <!-- End Time Picker -->
    <HBox spacing="10" />

    <!-- Date Picker -->
    <HBox alignment="BASELINE_CENTER" spacing="10">
        <Label />
        <DatePicker fx:id="datePicker" prefHeight="42.0" prefWidth="398.0" promptText="Select Date" />
    </HBox>

    <!-- Buttons -->
    <HBox alignment="BASELINE_CENTER" prefHeight="26.0" prefWidth="297.0" spacing="10">
      <children>
           <Button onAction="#handleSave" text="Save" />
           <Button alignment="BASELINE_CENTER" graphicTextGap="5.0" onAction="#handleExit" prefHeight="26.0" prefWidth="40.0" text="Exit" />
      </children>
    </HBox>
</VBox>
