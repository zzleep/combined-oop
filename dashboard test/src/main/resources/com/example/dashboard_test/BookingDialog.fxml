<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="255.0" prefWidth="321.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dashboard_test.BookingDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Professor Selection -->
    <HBox spacing="10">
        <Label text="Professor:" />
        <ComboBox fx:id="professorComboBox" promptText="Select Professor" />
    </HBox>

    <!-- Section Selection -->
    <HBox spacing="10">
        <Label text="Section:" />
        <ComboBox fx:id="sectionComboBox" promptText="Select Section" />
    </HBox>

    <!-- Subject Selection -->
    <HBox spacing="10">
        <Label text="Subject:" />
        <ComboBox fx:id="subjectComboBox" promptText="Select Subject" />
    </HBox>

    <!-- Start Time Picker -->
    <HBox spacing="10">
        <Label text="Start Time:" />
        <ComboBox fx:id="startTimePicker" promptText="Select Start Time" />
    </HBox>

    <!-- End Time Picker -->
    <HBox spacing="10">
        <Label text="End Time:" />
        <ComboBox fx:id="endTimePicker" promptText="Select End Time" />
    </HBox>

    <!-- Date Picker -->
    <HBox spacing="10">
        <Label text="Date:" />
        <DatePicker fx:id="datePicker" promptText="Select Date" />
    </HBox>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button onAction="#handleSave" text="Save" />
        <Button onAction="#handleExit" text="Exit" />
    </HBox>
</VBox>
