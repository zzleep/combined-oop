<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.dashboard_test.BookingDialogController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Professor Selection -->
    <HBox spacing="10">
        <Label text="Section:"/>
        <ComboBox fx:id="professorComboBox" promptText="Select Professor"/>
    </HBox>

    <!-- Section Selection -->
    <HBox spacing="10">
        <Label text="Section:"/>
        <ComboBox fx:id="sectionComboBox" promptText="Select Section"/>
    </HBox>

    <!-- Subject Selection -->
    <HBox spacing="10">
        <Label text="Subject:"/>
        <ComboBox fx:id="subjectComboBox" promptText="Select Subject"/>
    </HBox>

    <!-- Start Time Picker -->
    <HBox spacing="10">
        <Label text="Start Time:"/>
        <ComboBox fx:id="startTimePicker" promptText="Select Start Time"/>
    </HBox>

    <!-- End Time Picker -->
    <HBox spacing="10">
        <Label text="End Time:"/>
        <ComboBox fx:id="endTimePicker" promptText="Select End Time"/>
    </HBox>

    <!-- Date Picker -->
    <HBox spacing="10">
        <Label text="Date:"/>
        <DatePicker fx:id="datePicker" promptText="Select Date"/>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Exit" onAction="#handleExit"/>
    </HBox>
</VBox>
